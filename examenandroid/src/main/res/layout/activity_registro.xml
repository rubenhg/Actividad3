<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="utad.examenandroid.Registro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/lblUsuario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etUsuarioRegistro"
        android:layout_below="@+id/lblUsuario"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:inputType="textPassword"
        android:id="@+id/lblContraseña"
        android:layout_below="@+id/etUsuarioRegistro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etContraseñaRegistro"
        android:layout_below="@+id/lblContraseña"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/lblEmail"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:layout_below="@+id/lblEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/btnRegistro"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/etEmail"
        android:layout_toLeftOf="@+id/lblContraseña"
        android:layout_toStartOf="@+id/lblContraseña" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/btnVolver"
        android:layout_alignTop="@+id/btnRegistro"
        android:layout_toRightOf="@+id/lblUsuario"
        android:layout_toEndOf="@+id/lblUsuario" />
</RelativeLayout>
